.banner {
  background-size: cover;
  background-position: center;
  padding: 50px 0;
}

.banner .h1 {
  margin: 0;
  color: white;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  font-size: 32px;
  font-weight: bold;
  text-align: center;
  padding: 0 20rpx;
}

.banner .p {
  margin-top: 30rpx;
  font-size: 20px;
  color: white;
  opacity: .85;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  text-align: center;
  padding: 0 20rpx;
}

.btn-flat {
  margin-top: 80rpx;
  color: white;
  padding: 8px 24px;
  border-radius: 4px;
  background: #1EDD88;
  transition: background 0.3s ease;
}